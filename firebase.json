{
  "hosting": {
    "target": "qmk018-site",
    "public": "build",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/sitemap.xml",
        "function": "sitemap"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "redirects": [
      {
        "source": "/catalog/:keyboard_id/:path",
        "destination": "https://remap-keys.app/catalog/:keyboard_id/:path",
        "type": 301
      },
      {
        "source": "/catalog/:keyboard_id",
        "destination": "https://remap-keys.app/catalog/:keyboard_id",
        "type": 301
      }
    ]
  },
  "firestore": {
    "rules": "firestore.rules"
  },
  "emulators": {
    "ui": {
      "host": "0.0.0.0",
      "port": "4000"
    },
    "firestore": {
      "host": "0.0.0.0",
      "port": "8080"
    }
  }
}
