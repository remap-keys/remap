{
  "hosting": {
    "target": "user-site",
    "public": "build",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/sitemap.xml",
        "function": "sitemap"
      },
      {
        "source": "/catalog/**",
        "function": "catalog"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "emulators": {
    "ui": {
      "host": "0.0.0.0",
      "port": "4000"
    },
    "firestore": {
      "host": "0.0.0.0",
      "port": "8080"
    }
  }
}
